{% extends "layouts/base.njk" %}
{% block content %}
  <article class="hero wrapper">
    <div class="hero__title flow">
      <h1>{{ home.greeting | safe }}
        <em>I'm {{ author.nameShort | safe }}</em>, {{ home.introShort | safe }}</h1>
      <p>{{ home.intro | safe }}</p>
    </div>
    <div class="hero__cta cluster">
      <a class="button" href="#featured" data-type="primary">See what I can do!</a>
      <a class="button" href="/contact/" data-type="secondary">Let's get in touch!</a>
    </div>
  </article>
  {% include "partials/featured-work.njk" %}
  {% include "partials/about-home.njk" %}
  {% include "partials/blog-recent.njk" %}
{% endblock %}