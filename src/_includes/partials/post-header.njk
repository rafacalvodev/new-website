<article class="post-header">
  <div class="flow">
    <h1 class="post-header__heading headline" data-highlight="primary">
      {{ title }}
    </h1>
    <div class="post-header__info flex">
      <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
      <div class="post-header__tags">
        {% if tags %}
          <p class="visually-hidden" id="tags-desc">Tags that this post has been filed under.</p>
          <ul class="tags-list" aria-describedby="tags-desc" role='list'>
            {% for tag in tags %}
              <li>
                <a href="/tag/{{ tag | slug }}/">#{{ tag | title | replace(' ', '') }}</a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>
    </div>
    {% if pageHeaderSummary %}
      <div class="post-header__summary">
        <p>{{ pageHeaderSummary | safe }}</p>
      </div>
    {% endif %}
  </div>
</article>