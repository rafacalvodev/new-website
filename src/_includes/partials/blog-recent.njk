<section class="recent-posts">
  <div class="wrapper flow">
    <header class="recent-posts__header">
      <h2>{{ recentArticles.title }}</h2>
      <p>{{ recentArticles.summary }}</p>
    </header>
    <div class="grid recent-posts__grid post-list">
      {% for item in collections.blog  | limit(2) %}
        <article class="flow card post-list__item">
          <h3>
            <a class="post-list__link" href="{{ item.url }}">{{ item.data.title }}</a>
          </h3>
          <p>{{ item.data.summary | safe }}</p>
          <ul class="tag-list tag-list-summary" role="list">
            {% for tag in item.data.tags %}
              <li>
                <a class="tag" href="/tag/{{ tag | slug }}/">
                  <span role="presentation">#</span>
                  {{ tag | replace(' ', '-') | lower }}</a>
              </li>
            {% endfor %}
          </ul>
        </article>
      {% endfor %}
    </div>
    <div class="recent-posts__cta">
      <a class="button" href="/blog/" data-type="section-cta">More in the blog</a>
    </div>
  </div>
</section>