<div>
  <form class="contact__form" name="contact" method="POST" data-netlify="true">
    <div>
      <label>Your Name:</label>
      <input class="input" type="text" name="name"/>
    </div>
    <div>
      <label>Your Email:</label>
      <input class="input" type="email" name="email"/>
    </div>
    <div>
      <label>Message:</label>
      <textarea class="textarea" name="message" id="details" aria-described-by="details_helper" rows="4" cols="50"></textarea>
    </div>
    <div>
      <button class="button" type="submit" data-type="primary">Send</button>
    </div>
  </form>
</div>