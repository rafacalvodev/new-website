{# Only renders this section if there are links to render #}
{% if pagination.href.next or pagination.href.previous %}
  <footer class="pagination">
    <div class="wrapper">
      <nav class="pagination__inner" aria-label="Pagination links">
        {% if pagination.href.previous %}
          <a class="button" href="{{ pagination.href.previous }}{{ paginationAnchor }}" data-direction="backwards" data-type="primary">
            {{ paginationPrevText if paginationPrevText else 'Previous' }}
          </a>
        {% endif %}
        {% if pagination.href.next %}
          <a class="button" href="{{ pagination.href.next }}{{ paginationAnchor }}" data-direction="forwards" data-type="primary">
            {{ paginationNextText if paginationNextText else 'Next' }}
          </a>
        {% endif %}
      </nav>
    </div>
  </footer>
{% endif %}